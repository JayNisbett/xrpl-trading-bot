# XRPL Configuration
# Using s2.ripple.com for better reliability (official Ripple server)
XRPL_SERVER=wss://s2.ripple.com
XRPL_NETWORK=mainnet

# Wallet Configuration
WALLET_SEED=
WALLET_ADDRESS=

# Storage Configuration
DATA_FILE=./data/state.json

# Trading Configuration (OPTIMIZED FOR 20 XRP)
MIN_LIQUIDITY=50
MIN_HOLDERS=5
MIN_TRADING_ACTIVITY=3
MAX_SNIPE_AMOUNT=5
EMERGENCY_STOP_LOSS=0.5
DEFAULT_SLIPPAGE=5.0

# Sniper Configuration (AGGRESSIVE FOR HIGH FREQUENCY TRADING)
# Optimized for maximum trade opportunities
SNIPER_CHECK_INTERVAL=2000
MAX_TOKENS_PER_SCAN=100
SNIPER_BUY_MODE=true
SNIPER_AMOUNT=2
SNIPER_CUSTOM_AMOUNT=
SNIPER_MIN_LIQUIDITY=10
SNIPER_RISK_SCORE=high
SNIPER_TRANSACTION_DIVIDES=1
# Advanced scanner throughput tuning (new)
SNIPER_LEDGERS_PER_SCAN=6
SNIPER_LEDGER_BASE_INTERVAL_MS=150
SNIPER_INTER_LEDGER_DELAY_MS=100
SNIPER_LEDGER_MAX_BACKOFF_MS=3000

# Copy Trading Configuration (OPTIMIZED FOR FAST REACTIONS)
COPY_TRADING_CHECK_INTERVAL=2000
MAX_TRANSACTIONS_TO_CHECK=30
COPY_TRADER_ADDRESSES=
COPY_TRADING_AMOUNT_MODE=fixed
COPY_TRADING_MATCH_PERCENTAGE=50
COPY_TRADING_MAX_SPEND=2
COPY_TRADING_FIXED_AMOUNT=1.5

# AMM Bot Configuration (ARBITRAGE & YIELD FARMING)
AMM_BOT_ENABLED=true
